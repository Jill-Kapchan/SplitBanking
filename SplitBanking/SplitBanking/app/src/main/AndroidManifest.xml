<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="splitbanking.project">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterStep1" android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".RegisterStep2" android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".RegisterStep3" android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".CardPage" android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".AddCardRoot" android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".CreatePersonalCard" android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".CreateSharedCard" android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".IndivCardView" android:windowSoftInputMode="adjustPan"></activity>
    </application>

</manifest>